<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.asalfo.jokeactivity.JokeActivityFragment">

    <ImageView
        android:id="@+id/clownimage"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:background="#fff"
        android:paddingBottom="50dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/clown"
        android:contentDescription="@string/clown" />
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_below="@id/clownimage"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        card_view:cardElevation="16dp">

        <TextView
            android:id="@+id/joke_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="20sp"
            tools:text="If kisses were water, I will give u sea. If hugs were leaves, I will give u a tree.If u luv a planet, I will give u a galaxy, if friendship is life I will give u mine."/>
    </android.support.v7.widget.CardView>

</RelativeLayout>